# Volume Down
bindsym XF86AudioLowerVolume exec --no-startup-id pamixer -d 10 --allow-boost && notify-send "VOLUME DOWN"

# Volume Mute
bindsym XF86AudioMute exec --no-startup-id pamixer -t && notify-send "VOLUME MUTE"

